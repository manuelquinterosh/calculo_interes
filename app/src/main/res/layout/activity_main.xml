<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sv.com.manuelqh.calculo_interes.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculo de Interes"
        android:textSize="25dp"
        android:layout_centerHorizontal="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/textView" />

    <EditText
        android:id="@+id/capital"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese Capital"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp" />

    <EditText
        android:id="@+id/interes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese Tasa de Interes"
        android:layout_below="@id/capital" />

    <EditText
        android:id="@+id/Nperiodo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese Numero de Periodo"
        android:layout_below="@id/interes" />

    <Button
        android:id="@+id/btnCalculo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calcular"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/resultadoFinal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resultado"
        android:layout_marginTop="87dp"
        android:layout_below="@+id/btnCalculo"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/interes_A_pagar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Interes"
        android:layout_below="@+id/resultadoFinal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="49dp" />


</RelativeLayout>
